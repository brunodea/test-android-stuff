<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">@dimen/window_title</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitle</item>
    </style>
    
    <style name="Common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="Footer" parent="Common">
        <item name="android:textSize">@dimen/text_default</item>
    </style>
    

    <style name="HorizontalLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/HorizontalLineColor</item>
    </style>

    <style name="FooterLinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/FooterColor</item>
    </style>
    
    <style name="WindowTitle">
        <item name="android:background">@color/WindowTitleBG</item>
    </style>
</resources>